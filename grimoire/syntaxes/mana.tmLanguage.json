{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Mana",
  "scopeName": "source.mana",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#attributes" },
    { "include": "#scoped-declarations" },
    { "include": "#type-declarations" },
    { "include": "#type-annotations" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "scoped-declarations": {
      "patterns": [
        {
          "begin": "\\b(enum|variant|Tag)\\s+([a-zA-Z_][a-zA-Z0-9_.]*)\\s*(?::\\s*[a-zA-Z_][a-zA-Z0-9_]*\\s*)?(\\{)",
          "beginCaptures": {
            "1": { "name": "storage.type.mana" },
            "2": { "name": "entity.name.type.mana" },
            "3": { "name": "punctuation.definition.block.mana" }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": { "name": "punctuation.definition.block.mana" }
          },
          "patterns": [
            { "include": "#comments" },
            {
              "name": "variable.other.member.mana",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            { "include": "#numbers" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "type-declarations": {
      "patterns": [
        {
          "match": "\\b(type|enum|variant|Tag|interface)\\s+([a-zA-Z_][a-zA-Z0-9_.]*)",
          "captures": {
            "1": { "name": "storage.type.mana" },
            "2": { "name": "entity.name.type.mana" }
          }
        }
      ]
    },
    "comments": {
      "patterns": [{
        "name": "comment.line.double-slash.mana",
        "match": "//.*$"
      }]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mana",
          "begin": "\"",
          "end": "\"",
          "patterns": [{ "name": "constant.character.escape.mana", "match": "\\\\." }]
        },
        {
          "name": "string.quoted.single.mana",
          "begin": "'",
          "end": "'",
          "patterns": [{ "name": "constant.character.escape.mana", "match": "\\\\." }]
        }
      ]
    },
    "attributes": {
      "patterns": [{
        "name": "entity.other.attribute-name.mana",
        "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
      }]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mana",
          "match": "\\b(if|else|loop|for|in|break|skip|return|when|match|import|as|module|public|private)\\b"
        },
        {
          "name": "storage.type.mana",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|isize|usize|bool|string|char|byte|none|data|fn|mut|const|type|Tag|enum|variant|interface)\\b"
        }
      ]
    },
    "type-annotations": {
      "patterns": [
        {
          "match": "(:|->)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.special.mana" },
            "2": { "name": "entity.name.type.mana" }
          }
        }
      ]
    },
    "constants": {
      "patterns": [{
        "name": "constant.language.boolean.mana",
        "match": "\\b(true|false)\\b"
      }]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.mana",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.mana",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [{
        "name": "entity.name.function.mana",
        "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*\\()"
      }]
    },
    "identifiers": {
      "patterns": [{
        "name": "variable.other.mana",
        "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
      }]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.assignment.compound.mana", "match": "(\\+=|-=|\\*=|/=|%=)" },
        { "name": "keyword.operator.assignment.mana", "match": "=" },
        { "name": "keyword.operator.comparison.mana", "match": "(==|!=|<=|>=|<|>)" },
        { "name": "keyword.operator.logical.mana", "match": "\\b(and|or|not)\\b|&&|\\|\\||!" },
        { "name": "keyword.operator.arithmetic.mana", "match": "(\\+|-|\\*|/|%)" },
        { "name": "keyword.operator.arrow.mana", "match": "(->|=>)" },
        { "name": "keyword.operator.range.mana", "match": "(\\.\\.|~)" },
        { "name": "keyword.operator.special.mana", "match": "(::|:|\\.|@|\\$|&)" }
      ]
    }
  }
}