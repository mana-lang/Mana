{
    "version": 8,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 28,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "salem-debug-base",
        "hidden":true,
        "binaryDir": "${sourceDir}\\.build\\debug",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
      }
      },
      {
        "name": "salem-release-base",
        "hidden":true,
        "binaryDir": "${sourceDir}\\.build\\release",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
      }
      }
    ]
  }